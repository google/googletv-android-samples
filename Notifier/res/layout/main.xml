<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/txtTitle" android:text="@string/title"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="20dp" android:layout_marginTop="20dp" />
	<Button android:id="@+id/btnNotify1" android:text="@string/btn_text_toast"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />	
	<Button android:id="@+id/btnNotify2" android:text="@string/btn_custom_notify"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />
	<Button android:id="@+id/btnNotify3" android:text="@string/btn_ongoing_notify"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />
</LinearLayout>
